{
  "name": "zero-agent",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Code-like agent for Xero accounting using Claude Agent SDK and MCP",
  "workspaces": [
    "packages/*",
    "functions/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:lambda": "pnpm --filter '@zero-agent/lambda-*' run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy:dev": "cd terraform && terraform workspace select dev && terraform apply",
    "chat": "tsx examples/chat.ts",
    "server": "pnpm --filter @zero-agent/server run dev",
    "server:build": "pnpm --filter @zero-agent/server run build",
    "server:start": "pnpm --filter @zero-agent/server run start"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
